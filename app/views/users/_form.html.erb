<% content_for :head do %><%= stylesheet_link_tag 'login_signup', media: 'all', 'data-turbolinks-track': 'reload' %><% end %>

<div class="center">
  <%= content_for :form_title %>
  <%= form_for(@user) do |f| %>
    <div class="form_field">
      <%= f.text_field :username %>
      <%= content_tag(:span) %>
      <%= f.label :username %>
    </div>
    <div class="form_field">
      <%= f.text_field :email %>
      <%= content_tag(:span) %>
      <%= f.label :email %>
    </div>
    <div class="form_field">
      <%= f.file_field :cover %>
      <%= content_tag(:span) %>
    </div>
    <div class="form_field">
      <%= f.password_field :password %>
      <%= content_tag(:span) %>
      <%= f.label :password%>
    </div>
    <div class="form_field">
      <%= f.password_field :password_confirmation %>
      <%= content_tag(:span) %>
      <%= f.label :password_confirmation %>
    </div>
  
    <div class="submit">
      <%= f.submit %>
    </div>
  <% end %>

  <% if !logged_in? %>
  <div class="alternative_link">
    Already a member? <%= link_to "Sign in", login_path %>
  </div>

  <div class="oauth_link">
    or you can sign in with <%= button_to 'auth/google_oauth2' do %><%= '<i class="fa-solid fa-g"></i>oogle'.html_safe %><% end %> 
  </div>
  <% end %>
</div>
